<ul class="breadcrumb">
  <li><%= link_to 'Home', root_path %><span class="divider">/</span></li>
  <li class="active">Users</li>
</ul>

<% if notice.present? %>
<div class="alert alert-success">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <span id="notice"><%= notice %></span>
</div>
<% end %>

<table class="user-list">
  <tr>
    <th class="span4">Users</th>
    <th><%= link_to "<i class='icon-plus-sign'></i>".html_safe, new_user_path, class: 'btn' %></th>
  </tr>
<% @users.each do |user| %>
  <tr class="user-name">
    <td class="span4"><%= user.name %></td>
    <td>
      <div class="tools">
        <%= link_to "<i class='icon-wrench'></i>".html_safe, edit_user_path(user) %>
        <%= link_to "<i class='icon-remove'></i>".html_safe, user, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' } %>
      </div>
    </td>
  </tr>
<% end %>
</table>
