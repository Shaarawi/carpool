<ul class="breadcrumb">
  <li><%= link_to 'Home', root_url %><span class="divider">/</span></li>
  <li class="active">Edit Schedule</li>
</ul>

<h1>My Schedule</h1>

<%= form_for(@schedule, html: {class: 'form-horizontal'}) do |f| %>
  <%= render 'fields', schedule_fields: f %>
  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= link_to 'Back', root_path, class: 'btn' %>
  </div>
<% end %>
